<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Porteføljer</title>
  <link href="./portefoljer.css" rel="stylesheet">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel="stylesheet">
</head>

<body>
  <!-- Indhold -->
  <div class="indhold">

    <!-- Overskrift og knapper -->
    <div class="overskrift">
      <h1>Growth Tech Portfolio</h1>
      <div class="knapper">
        <a href="/handelshistorik" class="knap">Handels Historik</a>
        <a href="/Registrerhandel" class="knap">Registrer Handel</a>
        <a href="#" class="knap">Søg værdipapir</a>
      </div>
    </div>

    <!-- Øverste sektion: graf + højreside -->
    <div class="øverste">

      <!-- Grafboks -->
      <div class="grafboks">
        <h3>Samlet værdi af portefølje</h3>
        <p>grafen kommer</p>
      </div>

      <!-- Højreside (cirkeldiagram + total værdi) -->
      <div class="højresideboks">

        <div class="diagramBoks">
          <h3>Fordeling af værdi</h3>
          <p>cirkeldiagram</p>
        </div>

        <div class="højrenedreboks">
          <h3>Total værdi i DKK</h3>
          <p>data kommer</p>
        </div>
      </div>
    </div>

    <!-- Nederste sektion: tabel -->
    <div class="nedersteboks">
      <h3>Aktier i portefølje</h3>
      <p>tabel kommer</p>
    </div>
    
  </div> <!-- Slut på indhold -->
  
  <div class="gåTilbageBox">
    <a href="/konti" class="gåTilbageKnap"> Gå tilbage</a>
  </div>
  
</body>
</html>
